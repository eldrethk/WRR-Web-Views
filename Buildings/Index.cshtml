@model IEnumerable<WRR.Maintenance.Models.Buildings>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Buildings </h2>
<hr />
@if (Enumerable.Count(Model) > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BuildingName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BuildingName)
        </td>
        <td class="text-nowrap align-middle">       
            @Html.ActionLink("Delete", "Delete", new { id = item.BuildingID }, new { onclick = "return confirm('Are you sure you want to delete?');" })
        </td>
    </tr>
    }

</table>
}
else
{
    <div class="alert alert-warning">No Results</div>
}

<hr />

@using (Html.BeginForm("Index", "Buildings"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Building Name", htmlAttributes: new { @class = "control-label col-md-6 p-0" })
            <div class="row">
            <div class="col-md-6">
                @Html.Editor("BuildingName", new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-6">
                <input type="submit" value="Add" class="btn btn-primary btn-md" />
            </div>
            </div>
        </div>

       
    </div>
 }
