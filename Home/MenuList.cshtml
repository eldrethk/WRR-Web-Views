@model WRR.Models.UserViewModel

@{
    Layout = null;
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>WeRentRooms</title>
</head>
<body>
    <div class="form-horizonal container">
        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto form p-4">
            <section id="loginForm">
                @using (Html.BeginForm("SetHotel", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "justify-content-center", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <p><img src="~/Content/images/WeRentRoomsLogo.jpg" class="img-fluid" /></p>
                    <div class="form-group">

                        <div class="col-md-12">
                            @Html.DropDownList("Menu", new SelectList(Model.UserHotels, "Value", "Text"), htmlAttributes: new { @class = "custom-select" })

                        </div>
                    </div>
                    <div class="form-group text-center">
                        <div class="col-md-offset-2 col-md-12">
                            <input type="submit" value="Go" class="btn btn-primary btn-lg" />
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>


    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
