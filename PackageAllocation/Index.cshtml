@model WRR.Models.PackageAllocationViewModel

@{
    ViewBag.Title = "Package Allocation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Package Allocation</h2>
<hr />


@using (Html.BeginForm("Index", "PackageAllocation", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-4 control-label pb-2">Packages:</div>
            <div class="col-md-6">
                @Html.DropDownList("Packages", new SelectList(Model.HotelPackages, "Value", "Text"), "--Select Package--", htmlAttributes: new { @class = "custom-select" })
            </div>
        </div>
        <div class="row mt-1 mb-4 form-padding-left">
            <div class="col-md-6">
                <input type="submit" value="Get Room" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}
