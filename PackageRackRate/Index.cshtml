@model WRR.Data.Models.Package.Package

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Rack Rates for Packages</h2>
<hr />


@using (Html.BeginForm("Index", "PackageRackRate", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Packages", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.PackageID, ViewBag.PackageList as SelectList, "--Select Package--", htmlAttributes: new { @class = "custom-select" })
            </div>
            <div class="form-padding-left mt-3">
                <input type="submit" value="View Rates" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}