@model IEnumerable<WRR.Data.Models.Package.Package>

@using WRR.Extensions
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Packages</h2>
@if (User.IsInRole("WRRAdmin") || User.IsInRole("Hotel"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
@if (Enumerable.Count(Model) > 0)
{
    <table class="table table-responsive-md">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidtTo)
            </th>
            <th>
                @Html.DisplayNameFor(model=> model.Visible)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.PackageAllocation)
            </th>
            <th class="text-center">
                Special's Page
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.MiniVac)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Amenity)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.PricePoint)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="max-width:280px;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ValidFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidtTo)
                </td>
                <td>
                    @if (item.Visible == true)
                    {
                        <span class="badge badge-pill badge-success">On</span>
                    }
                    else
                    {
                        <span class="badge badge-pill badge-danger">Off</span>
                    }
                </td>
                <td class="text-center">
                    @if (item.PackageAllocation == true)
                    {
                        <span class="badge badge-pill badge-primary">True</span>
                    }
                    else
                    {
                        <span class="badge badge-pill badge-secondary">False</span>
                    }
                </td>
                <td class="text-center">
                    @if (item.SpecialPage == true)
                    {
                        <span class="badge badge-pill badge-success">On</span>
                    }
                    else
                    {
                        <span class="badge badge-pill badge-danger">Off</span>
                    }
                </td>
                <td class="text-center">
                    @if (item.MiniVac == true)
                    {<span class="badge badge-pill badge-primary">True</span>}
                    else
                    {
                        <span class="badge badge-pill badge-secondary">False</span>
                    }
                </td>
                <td class="text-center">
                    @Html.IconActionLink(" ", "Index", "PackageAmenity", new { id = item.PackageID }, new { @class = "text-info" }, "fas fa-spa fa-2x")
                </td>
                <td class="text-center">
                    @if (item.PricePoint == true)
                    {

                        @Html.ActionLink("Add Rates", "Details", "PackageRackRate", new { id = item.PackageID }, new { @class = "btn btn-outline-success" })
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PackageID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PackageID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PackageID, name = item.Name, hotelid = item.HotelID }, new { onclick = "return confirm('Are you sure you want to delete?');" }) |
                    @Html.ActionLink("Review", "Special", "Specials", new { area="Reserv", id=item.HotelID, packageid=item.PackageID}, new { target = "_blank"})
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="alert alert-warning">No Results</div>
}