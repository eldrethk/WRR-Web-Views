@model WRR.Models.RackRackViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rack Rates</h2>
<hr />
@using (Html.BeginForm("Index", "RoomRackRate", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
 
     
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   

        <div class="form-group">
            <div class="col-md-4 control-label pb-2">Room Types:</div>
            <div class="col-md-6">
                @Html.DropDownList("RoomTypes", new SelectList(Model.HotelRooms, "Value", "Text"), "All Rooms", htmlAttributes: new { @class = "custom-select" })
            </div>
        </div>
        <div class="row mt-1 mb-4 form-padding-left">
            <div class="col-md-6">
                <input type="submit" value="Get Room" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}



