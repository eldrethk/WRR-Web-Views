@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  
    <h2 class="text-danger text-center p-5">An error occurred while processing your request.</h2>

    <p class="text-center font-weight-bold">@(!String.IsNullOrEmpty(ViewBag.StatusCode) ? ViewBag.StatusCode : "500 Error"):
    @(!String.IsNullOrEmpty(ViewBag.Message) ? ViewBag.Message : "Sorry, there was an error.")</p>
</body>
</html>