<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WeRentRooms </title>
    <script src="https://kit.fontawesome.com/9e38935786.js" crossorigin="anonymous"></script>
    <link rel='stylesheet' id='fontawesome-css' href='https://use.fontawesome.com/releases/v5.11/css/all.css' type='text/css' media='all' />
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link rel="stylesheet" type="text/css" href="https://uicdn.toast.com/tui.time-picker/latest/tui-time-picker.css">
    <link rel="stylesheet" type="text/css" href="https://uicdn.toast.com/tui.date-picker/latest/tui-date-picker.css">
    <link rel="stylesheet" type="text/css" href="https://nhn.github.io/tui.calendar/latest/dist/tui-calendar.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Custom-TUI-Calendar.css">
    <link rel="stylesheet" type="text/css" href="https://nhn.github.io/tui.calendar/latest/examples/css/icons.css">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    @RenderSection("HeadScript", required: false)
</head>
<body>
    @Html.Partial("_BusyIndicato")
    <div id="wrapper">
        <!-- Sidebar -->
        @Html.Partial("_AdminNavMenu")
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Topbar -->
                <nav id="TopNav" class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <!-- Topbar Search -->
                    <div class="no-display">
                        <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <div class="input-group">
                                <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="button">
                                        <i class="fas fa-search fa-sm"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item dropdown no-arrow d-sm-none">

                            <!-- Dropdown - Messages -->
                            <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in" aria-labelledby="searchDropdown">
                                <form class="form-inline mr-auto w-100 navbar-search">
                                    <div class="input-group">
                                        <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            @if (IndentityManagement.Utilites.Utils.IfUserAuthenticated())
                            {
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.Identity.Name</span>
                                using (Html.BeginForm("Logout", "Home", new {area=""}, FormMethod.Post, new { @class = "d-inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <span class="d-none d-sm-inline-block"><input type="submit" id="btnLogOut" value="Log out" class="btn btn-sm btn-primary shadow-sm" /></span>
                                }
                            }
                        </li>

                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div id="HotelListing" class="alert alert-info">
                        <div class="row text-center">
                            <div class="col-lg-6 col-md-12 col-sm-12">
                            @{
                                int id;
                                id = Convert.ToInt32(Session["HotelID"]);
                                if (id > 0)
                                {
                                    <span class="h3 text-gray-800 text-center">@Session["HotelName"]</span>
                                }
                                else
                                {
                                    Response.Redirect("~/Home/Logout");
                                }
                            }
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 pt-1">@Html.ActionLink("(Change Hotel)", "MenuList", "Home", new { Area = "" }, null)</div>
                        </div>
                    </div>
                    @RenderBody()
                </div>

                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>&copy; @DateTime.Now.Year - WeRentRooms</span>
                        </div>
                    </div>
                </footer>



            </div>
        </div>


    </div>




    @Scripts.Render("~/bundles/fullcalendarjs")
    @Scripts.Render("~/bundles/popper")


    <script src="~/Scripts/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>


    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        
        $('#sidebarToggleTop').click(function () {
            $('#accordionSidebar').toggleClass("no-display");
          
        });
    </script>
</body>
</html>
