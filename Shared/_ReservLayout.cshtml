
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>WeRentRooms</title>
    <script src="https://kit.fontawesome.com/9e38935786.js" crossorigin="anonymous"></script>
    <link rel='stylesheet' id='fontawesome-css' href='https://use.fontawesome.com/releases/v5.11/css/all.css' type='text/css' media='all' />
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

    <link href="~/Content/sb-admin-2.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />
    <link href="~/Content/wrr-reserv.css" rel="stylesheet" />
    <link href="~/Content/BusyIndicator.css" rel="stylesheet" />
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
   
  
    <script src="~/Scripts/jquery-3.5.1.js"></script>
   
    <link href="~/Content/w3.css" rel="stylesheet" />
   
    <link rel="stylesheet" href="~/Content/Hotel-CSS/@ViewBag.HotelLayout.HotelCSS">

    @RenderSection("HeadScript", required: false)
</head>
<body>
    @Html.Partial("_BusyIndicato")
    <div>
        @if (ViewBag.HotelLayout.HeaderHtml == true)
        {
            <div>@Html.Raw(File.ReadAllText(Server.MapPath("~/Areas/Reserv/Views/Shared/HotelHeader/" + ViewBag.HotelLayout.HeaderFileName)))</div>
        }
        else
        {
            <div><h2 class="text-center m-4">@ViewBag.HotelLayout.HeaderFileName</h2></div>
        }
        <div>
            @RenderBody()
        </div>
        @if (ViewBag.HotelLayout.FooterHtml == true)
        {
            <div>@Html.Raw(File.ReadAllText(Server.MapPath("~/Areas/Reserv/Views/Shared/HotelFooter/" + ViewBag.HotelLayout.FooterFileName)))</div>
        }
        else
        {
            <div><p class="text-center m-4">@ViewBag.HotelLayout.FooterFileName</p></div>
        }

    </div>
    @Scripts.Render("~/bundles/jquery")
  
    <script src="~/Scripts/bootstrap.js"></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>

    <script>
        $(document).on('submit', 'form', function () {
            displayBusyIndicator();
        });

        function displayBusyIndicator() {
            $('.loading').show();
        }
    </script>


    @RenderSection("scripts", required: false)
</body>
</html>
