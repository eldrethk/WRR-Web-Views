@model WRR.Areas.Reserv.Models.RoomTypeViewModel

@using WRR.Extensions

<div class="modal-header">
    <h2 class="modal-title h3 form-padding-left">  @Html.DisplayFor(model => model.RoomType.Name)</h2>
    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @if (Model.RoomImages.Count > 0)
    {
        <div id="carouselControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
               @if (Model.MainImage.ImageID > 0)
                {
                    <div class="carousel-item active">
                        @Html.Image("MainImage", String.Format("/Content/room-images/{0}", Model.MainImage.FileName), Model.MainImage.FileName, "width: 100%!important;display: block!important;")

                    </div>
                }
                @foreach (var image in Model.RoomImages)
                {
                    <div class="carousel-item">
                        @Html.Image("Slides", String.Format("/Content/room-images/{0}", image.FileName), image.FileName, "width: 100%!important;display: block!important;")
                    </div>
                }

            </div>
            <a class="carousel-control-prev" href="#carouselControls" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselControls" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
    <div class="my-3">
        <h5>Room Details</h5>
        <p>@Html.DisplayFor(model => model.RoomType.Description)</p>

        @if (Model.RoomFeatures.Count > 0)
        {
            <h5>Special Features</h5>
            <ul class="fa-ul">
                @foreach (var feature in Model.RoomFeatures)
                {
                    var icon = "&#x" + feature.Icon + ";";
                    <li>
                        <i class="fa-li fa">@Html.Raw(icon)</i>
                        @Html.DisplayFor(mitem => feature.Features)
                    </li>
                }
            </ul>
        }

    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
